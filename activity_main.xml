            android:id="@+id/permission_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:hint="-"
            android:maxLines="10"/>
    </ScrollView>

    <TextView
        android:id="@+id/appLabel2_viewtext"
