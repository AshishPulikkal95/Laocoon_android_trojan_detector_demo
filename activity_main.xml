    <TextView
        android:id="@+id/appLabel_viewtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:hint="@string/appLabel_text"
        android:maxLines="1" />

    <TextView
        android:id="@+id/appname_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="15dp"
        android:hint="No app selected"
        android:maxLines="4" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="15dp"
        android:hint="Permissions:"
        android:maxLines="1" />

    <ScrollView
        android:id="@+id/scroll_box"
        android:layout_height="120dip"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent">
